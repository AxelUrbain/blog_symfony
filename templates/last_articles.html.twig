
<div style="position: relative">
    {% for categorie in categories %}
        <a href="{{ path('viewCategory', {'id' : categorie.id})}}" class="badge badge-pill badge-dark">
            {{ categorie.name | trans}}
        </a>
    {% endfor %}
    {% for article in articles %}
        <div class="card text-dark bg-light" style="margin-bottom: 15px; margin-top: 15px">
            <div class="card-header">
                <div class="row">
                    <div style="margin-right: 10px">
                        <i class="fas fa-feather-alt"></i>
                        {{ article.author }}
                    </div>
                    <div style="margin-right: 10px">
                        <i class="fas fa-calendar-day"></i>
                        {{ article.CreatedAt |date("m/d/Y") }}
                    </div>
                    <div style="margin-right: 10px">
                        <i class="fas fa-eye"></i>
                        {{ article.NbViews}}
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h4 class="card-title">{{ article.title }}</h4>
                <a class="btn btn-outline-primary" href="{{ path('viewAction', {'id' : article.id})}}">{{'Lire plus' | trans}}</a>
            </div>
        </div>
    {% endfor %}
</div>
