<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        {% if id is defined%}
            {% for i in 1..nbPerPage %}

                {% if loop.first %}
                    {% if page > 1 %}
                        <li class="page-item"><a class="page-link" href="{{ path(currentPath, {'page': page - 1, 'id':id} )}}">{{'Précédent' | trans}}</a></li>
                    {% else %}
                        <li class="page-item disabled"><a class="page-link" href="{{ path(currentPath, {'page': page - 1 , 'id':id})}}">{{'Précédent' | trans}}</a></li>
                    {% endif %}
                {% endif %}

                {% if i == page %}
                    <li class="page-item active disabled"><a class="page-link" href="{{ path(currentPath, {'page': i , 'id':id})}}">{{ i }}</a></li>
                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path(currentPath, {'page': i , 'id':id})}}">{{ i }}</a></li>
                {% endif %}

                {% if loop.last %}
                    {% if page < nbPerPage %}
                        <li class="page-item"><a class="page-link" href="{{ path(currentPath, {'page': page + 1 , 'id':id})}}">{{'Suivant' | trans}}</a></li>
                    {% else %}
                        <li class="page-item disabled"><a class="page-link" href="{{ path(currentPath, {'page': page + 1 , 'id':id})}}">{{'Suivant' | trans}}</a></li>
                    {% endif %}
                {% endif %}

            {% endfor %}
        {% else %}
            {% for i in 1..nbPerPage %}

                {% if loop.first %}
                    {% if page > 1 %}
                        <li class="page-item"><a class="page-link" href="{{ path(currentPath, {'page': page - 1} )}}">{{'Précédent' | trans}}</a></li>
                    {% else %}
                        <li class="page-item disabled"><a class="page-link" href="{{ path(currentPath, {'page': page - 1})}}">{{'Précédent' | trans}}</a></li>
                    {% endif %}
                {% endif %}

                {% if i == page %}
                    <li class="page-item active disabled"><a class="page-link" href="{{ path(currentPath, {'page': i})}}">{{ i }}</a></li>
                {% else %}
                    <li class="page-item"><a class="page-link" href="{{ path(currentPath, {'page': i})}}">{{ i }}</a></li>
                {% endif %}

                {% if loop.last %}
                    {% if page < nbPerPage %}
                        <li class="page-item"><a class="page-link" href="{{ path(currentPath, {'page': page + 1})}}">{{'Suivant' | trans}}</a></li>
                    {% else %}
                        <li class="page-item disabled"><a class="page-link" href="{{ path(currentPath, {'page': page + 1})}}">{{'Suivant' | trans}}</a></li>
                    {% endif %}
                {% endif %}

            {% endfor %}
        {% endif %}
    </ul>
</nav>