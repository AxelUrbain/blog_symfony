{% extends 'base.html.twig' %}

{% block login %}
        <div class="card w-50 mx-auto bg-dark shadow-lg text-white" style="margin-bottom: 20px">
            <div class="card-header text-center">
                <h3>{{'Connexion' | trans}}</h3>
            </div>

            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="card-body">
                <form action="{{ path('app_login_check') }}" method="post">
                    <div class="form-group w-75 mx-auto">
                        <label>{{"Nom d'utilisateur" | trans}}</label>
                        <input type="text" required name="_username" value="{{ last_username }}" class="form-control" placeholder="">
                    </div>
                    <div class="form-group w-75 mx-auto">
                        <label>{{'Mot de passe' | trans}}</label>
                        <input type="password" name="_password" class="form-control" placeholder="">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">{{'Se Connecter' | trans}}</button>
                    </div>
                </form>
            </div>
        </div>
{% endblock %}